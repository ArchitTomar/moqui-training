<?xml version="1.0" encoding="UTF-8"?>

<resource xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/rest-api-3.xsd"
          name="party"
          displayName="Party REST API"
          version="1.0">

    <resource name="persons">

        <method type="post">
            <service name="party.PersonServices.create#Person"/>
        </method>

    </resource>

    <resource name="parties">

        <method type="post">
            <entity name="party.Party" operation="create"/>
        </method>

    </resource>
</resource>
