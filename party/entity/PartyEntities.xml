<?xml version="1.0" encoding="UTF-8"?>
<entities xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/entity-definition-3.xsd">

    <!-- ================= Party ================= -->
    <entity entity-name="Party" package="party">
        <field name="partyId" type="id" is-pk="true"/>

        <!-- ðŸ”¥ ENUM FIX -->
        <field name="partyTypeEnumId"
               type="id"
               enum-type-id="PartyType"/>

        <field name="createdDate"
               type="date-time"
               default="ec.user.nowTimestamp"/>

        <relationship type="one" related="moqui.basic.Enumeration">
            <key-map field-name="partyTypeEnumId" related="enumId"/>
        </relationship>
    </entity>

    <!-- ================= Person ================= -->
    <entity entity-name="Person" package="party">
        <field name="partyId" type="id" is-pk="true"/>
        <field name="firstName" type="text-short"/>
        <field name="lastName" type="text-short"/>
        <field name="dateOfBirth" type="date"/>
        <relationship type="one" related="party.Party"/>
    </entity>

    <!-- ================= PartyGroup ================= -->
    <entity entity-name="PartyGroup" package="party">
        <field name="partyId" type="id" is-pk="true"/>
        <field name="groupName" type="text-short"/>
        <field name="description" type="text-long"/>
        <relationship type="one" related="party.Party"/>
    </entity>

    <!-- ================= ContactMech ================= -->
    <entity entity-name="ContactMech" package="party">
        <field name="contactMechId" type="id" is-pk="true"/>

        <!-- ðŸ”¥ ENUM FIX -->
        <field name="contactMechTypeId"
               type="id"
               enum-type-id="ContactMechType"/>

        <field name="infoString" type="text-medium"/>
        <field name="createdDate"
               type="date-time"
               default="ec.user.nowTimestamp"/>

        <relationship type="one" related="moqui.basic.Enumeration">
            <key-map field-name="contactMechTypeId" related="enumId"/>
        </relationship>
    </entity>

    <!-- ================= PartyContactMech ================= -->
    <entity entity-name="PartyContactMech" package="party">
        <field name="partyId" type="id" is-pk="true"/>
        <field name="contactMechId" type="id" is-pk="true"/>
        <field name="fromDate"
               type="date-time"
               is-pk="true"
               default="ec.user.nowTimestamp"/>
        <field name="thruDate" type="date-time"/>
        <relationship type="one" related="party.Party"/>
        <relationship type="one" related="party.ContactMech"/>
    </entity>

</entities>
