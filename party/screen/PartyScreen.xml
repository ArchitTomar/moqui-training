<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        require-authentication="anonymous-all">

    <!-- ================= Transition ================= -->
    <transition name="createParty">
        <service-call name="create#party.Party"/>
        <default-response url="."/>
    </transition>

    <!-- ================= Actions ================= -->
    <actions>
        <entity-find entity-name="party.Party" list="partyList">
            <search-form-inputs/>
        </entity-find>
    </actions>

    <!-- ================= Widgets ================= -->
    <widgets>

        <label type="h1" text="Party Management Screen"/>

        <!-- ===== Create Party Dialog ===== -->
        <container-dialog id="CreatePartyDialog"
                          button-text="Create Party">

            <form-single name="CreatePartyForm"
                         transition="createParty">

                <!-- ðŸ”¹ PURE AUTO FIELDS (NO OVERRIDE) -->
                <!-- partyTypeEnumId yahan TEXT FIELD rahega -->
                <auto-fields-entity entity-name="party.Party"
                                    field-type="edit"/>

                <field name="submitButton">
                    <default-field title="Create">
                        <submit/>
                    </default-field>
                </field>

            </form-single>
        </container-dialog>

        <!-- ===== Party List ===== -->
        <form-list name="ListParty"
                   list="partyList"
                   header-dialog="true"
                   skip-form="true">

            <auto-fields-entity entity-name="party.Party"
                                field-type="find-display"/>

        </form-list>

    </widgets>
</screen>
